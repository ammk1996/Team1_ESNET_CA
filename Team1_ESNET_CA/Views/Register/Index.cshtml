@using Team1_ESNET_CA.Models;
@{
    ViewData["Title"] = "Index";
}


@section Scripts{ 
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<script src="~/js/Script_Register.js"></script>

    <link rel="stylesheet" href="bootstrap-4.0.0-dist/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="bootstrap-4.0.0-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/Style_Register.css">

    }


<body>


    <div class="container">
        <div class="row justify-content-center my-auto align-items-center">
            <div class="px-xl-5 py-4">
                <h4 class="text-capitalize">Create new account</h4>
                <form method="post" id="form" action="/Register/InsertData">
                    <div class="form-row ">
                        <div class="col-lg-6 ">
                            <input type="text" id="fname" name="First_Name" class="form-control  my-3 p-3" tabindex="1" placeholder="First Name">

                        </div>
                        <div class="col-lg-6">
                            <input type="text" id="lname" name="Last_Name" class="form-control my-3 p-3" tabindex="2" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-6">
                            <input type="text" id="email" name="Email" class="form-control my-3 p-3" tabindex="3" placeholder="Email address">
                        </div>
                        <div class="col-lg-6">
                            <input type="text" id="mobile" name="Mobile" class="form-control my-3 p-3" tabindex="4" placeholder="Mobile No">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-lg-6">
                            <input type="password" id="pwd" name="Password" class="form-control my-3 p-3" tabindex="5" placeholder="Password">
                        </div>

                        <div class="col-lg-6">
                            <input type="password" id="confirmpwd" class="form-control my-3 p-3" tabindex="6" placeholder="Confirm Password">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-12">
                            <button type="submit" class="btn mt-3 mb-3" tabindex="7">Register</button>
                        </div>
                    </div>
                    <div class="form-row my-auto justify-content-center align-items-center">
                        <div class="col-lg-12 " id="error_msg">
                            @ViewData["errmsg"]
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

